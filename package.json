{
  "name": "zhilian-next",
  "version": "1.0.0",
  "description": "智链分析溯源平台 - 现代化TypeScript重构版本",
  "private": true,
  "packageManager": "pnpm@10.20.0",
  "scripts": {
    "dev": "turbo dev",
    "dev:desktop": "cd apps/desktop && pnpm tauri dev",
    "build": "turbo build",
    "build:desktop": "cd apps/desktop && pnpm tauri build",
    "lint": "turbo lint",
    "test": "turbo test",
    "clean": "turbo clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=10.0.0"
  }
}
