{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "智链分析溯源平台",
  "version": "1.0.0",
  "identifier": "com.zhilian.security",
  "build": {
    "beforeDevCommand": "cd ../../ && pnpm --filter @zhilian/web dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "cd ../../ && BUILD_FOR_TAURI=true pnpm --filter @zhilian/web build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "智链分析溯源平台",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "appimage", "deb"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  }
}
